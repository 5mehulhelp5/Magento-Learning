<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block name="product.last.orders"
                   template="Perspective_LastOrdersTab::last_orders.phtml"
                   group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string">Last Orders</argument>
                    <argument name="sort_order" xsi:type="number">100</argument>
                    <argument name="viewModel" xsi:type="object">Perspective\LastOrdersTab\ViewModel\LastOrders</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>