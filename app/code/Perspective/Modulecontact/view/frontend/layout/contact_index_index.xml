<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="contactForm" remove="true" />
        <referenceContainer name="content">
            <block class="Perspective\Modulecontact\Block\ContactForm"
                    name="customContactForm"
                    template="Perspective_Modulecontact::form.phtml">
                <arguments>
                    <argument name="button_lock_manager" xsi:type="object">Magento\Framework\View\Element\ButtonLockManager</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>